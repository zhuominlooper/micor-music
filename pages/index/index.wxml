<!-- 轮播图 -->
<view>
  <swiper indicator-dots class="swiper-banners" interval="3000" autoplay indicator-active-color="#e24b31" indicator-color="#fff">
    <swiper-item wx:for="{{bannerListData}}" wx:key="bannerId">
      <image src="{{item.pic}}"></image>
    </swiper-item>
  </swiper>
</view>
<!-- 导航图标 -->
<view class="navContainer">
  <view class="navItem">
    <text class="iconfont icon-meirituijian"></text>
    <text>每日推荐</text>
  </view>
  <view class="navItem">
    <text class="iconfont icon-gedan1"></text>
    <text>歌单</text>
  </view>
  <view class="navItem">
    <text class="iconfont icon-icon-ranking"></text>
    <text>排行榜</text>
  </view>
  <view class="navItem">
    <text class="iconfont icon-diantai"></text>
    <text>电台</text>
  </view>
  <view class="navItem">
    <text class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
    <text>直播</text>
  </view>
</view>

<!-- 推荐歌曲 -->
<view class="recommendContainer">
  <NavHeader title="推荐歌曲" nav="为你精心推荐"></NavHeader>
  <!-- 滚动区 -->
  <view>
    <scroll-view class="recommendScroll" scroll-x enable-flex>
      <view class="scroll-item" wx:for="{{recommendListData}}" wx:key="id">
        <image src="{{item.picUrl}}"></image>
        <text>{{item.name}}</text>
      </view>
    </scroll-view>
  </view>
</view>

<!-- 排行榜区域 -->
<view class="topList">
  <NavHeader title="排行榜" nav="热歌风向标"></NavHeader>
  <!-- 内容区域   -->
  <swiper class="topListSwiper" next-margin="60rpx">
    <swiper-item class="swiperItem" wx:for="{{topListData}}" wx:key="name">
      <view class="title"> {{item.name}}</view>
      <view class="musicTitem" wx:for="{{item.tracks}}" wx:key="id" wx:for-item="musicItem">
        <image src="{{musicItem.al.picUrl}}"></image>
        <text class="count">{{index+1}}</text>
        <text class="musicName">{{musicItem.name}}</text>
      </view>
    </swiper-item>
  </swiper>
</view>