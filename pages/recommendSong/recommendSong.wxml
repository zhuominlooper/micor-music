<vew class="recommendSongContainer">
  <view class="header">
    <image src="/static/images/recommendSong/recommendSong.jpg"></image>
    <view class="date">
      <text class="day">{{day}}号 / </text>
      <text class="month">{{month}}月</text>
    </view>
  </view>
  <!-- 列表区域 -->
  <view class="lisContainer">
    <view class="listHeader">
      <text>播放全部</text>
      <text class="changeMore"> 多选</text>
    </view>
    <!-- //滚动区 -->
    <scroll-view scroll-y class="listScroll">
      <view class="scrollItem" wx:for="{{scrollListData}}" wx:key="id" data-index='{{index}}' data-song='{{item}}' bindtap="toSongDetail">
        <image src="{{item.al.picUrl}}"></image>
        <view class="musicInfo">
          <text class="musicName">{{item.name}}</text>
          <text class="author">{{item.ar[0].name}}</text>
        </view>
        <text class="iconfont icon-gengduo"></text>
      </view>
    </scroll-view>
  </view>
</vew>