.searchContainer{
   padding: 20rpx;
}
  .header{
    width: 100%;
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
}
.searchInput{
  position: relative;
   flex: 1;
   background: rgba(237, 237, 237, 0.45);
   border-radius: 10rpx;
}
.searchInput input{
  margin-left: 50rpx;
  height: 60rpx;
}
.cancel{
  width: 100rpx;
}
.iconfont-pos{
   position: absolute;
   padding-left: 16rpx;
}
.placeholder{
  color:  #e24b31;
  text-align: center;
}
.hotContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
}
.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.order{
  margin: 0 10rpx;
}
.iconImage{
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
/* 搜索内容展示 */
.searchContent{
  color: #e24b31;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom:1rpx solid #e24b31 ;
}
.searchItem{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.content{
  flex: 1;
  margin-left: 20rpx;
  border-bottom:1rpx solid #eee;
  font-size: 24rpx;
}

