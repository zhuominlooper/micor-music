.viewContainer{
 padding: 20rpx;
}
.viewContainer .header {
  display: flex;
}
.header image{
  width: 60rpx;
  height: 60rpx;
}
.header .search{
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
  border:  1px solid rgb(233, 231, 231);
  border-radius: 20rpx;
  flex: auto;
  color: #e24b31;
  font-size: 24rpx;
}

.navScroll{
  padding: 0 10rpx;
  display: flex;
  white-space: nowrap;
  height:80rpx;
}
.navScroll .navItem{
  margin: 0 20rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navScroll .active{
  border-bottom: 4rpx solid red;
}
.videoScroll{
   padding: 0 3%;
   padding-bottom: 20rpx;
   height: calc(100vh - 150rpx)
}


.videoItem .common {
  width: 94%;
  height: 360rpx;
  border-radius: 10rpx;
}

.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
  margin-right: 40rpx;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 60rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}

.videoScroll .noData{
  text-align: center;
  position: relative;
  transform: translateY(-50%);
  top:40%
}
.noData image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 60rpx;
  animation: hideAnimation 3s infinite;
}
@keyframes hideAnimation{
  0%   {opacity: 0.1;}
  50%  {opacity: 1;}
  100% {opacity: 0.1;}
}