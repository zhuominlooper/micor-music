<view class="viewContainer">
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search" bindtap="onsearchSong">搜索歌曲</view>
    <image src="/static/images/logo.png"></image>
  </view>
</view>
<!-- 导航区域 -->
<scroll-view scroll-with-animation scroll-into-view="{{'scroll'+navId}}" scroll-x class="navScroll" enable-flex>
  <view object-fit="fill" id="{{'scroll'+item.id}}" class="navItem" wx:for="{{videoGroupList}}" wx:key="id">
    <view class="navContent {{navId===item.id?'active':''}}  " bindtap="chnageNav" id="{{item.id}}">
      {{item.name}}
    </view>
  </view>
</scroll-view>
<!-- 视频区域 -->

<scroll-view bindscrolltolower="onBindscrolltolower" refresher-triggered="{{triggered}}" refresher-enabled bindrefresherrefresh="onBindrefresherrefresh" scroll-y class="videoScroll">
  <view wx:if="{{videolistData.length}}">
    <view class="videoItem" wx:for="{{videolistData}}" wx:key="id">
      <video autoplay wx:if="{{videoId===item.data.vid}}" class="common" poster="{{item.data.coverUrl}}" bindplay="handlePlay" id="{{item.data.vid}}" src="{{item.videoUrl}}" bindtimeupdate="onBindtimeupdate" bindended="onBindended"></video>
      <image id="{{item.data.vid}}" wx:else class="common image" bindtap="handlePlay" src="{{item.data.coverUrl}}"></image>
      <view class="content">{{item.data.title}}</view>
      <view class="footer">
        <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.data.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-buoumaotubiao15"></text>
            <text class="count">{{item.data.praisedCount}}</text>
          </text>
          
          <text class="item">
            <text class="iconfont icon-pinglun1"></text>
            <text class="count">{{item.data.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-gengduo"></text>
          </button>
        </view>
      </view>
    </view>
  </view>
  <view wx:else class="noData">
    <image src="/static/images/video/noData.png"></image>
    <view>暂无数据</view>
  </view>
</scroll-view>